#: import Joystick kivy.garden.joystick.Joystick

<MainMenu>:
  id: box
  orientation: "vertical"
  spacing: 40
  padding: 40
  
  BoxLayout: 
    orientation: "horizontal"
    size_hint: 1, .2

    Button:
      id: bluetooth_button
      size_hint_x: .9
      text: "Select Bluetooth Device"
      
    DropDown:
      id: bluetooth_dropdown

    Button:
      size_hint_x: .1
      text: "Refresh"
    

  BoxLayout:
    orientation: 'horizontal'
    size_hint: 1, .8
    height: 80
    Joystick:
      id: StickDir
      text: "Control Direction"
      outer_size: 1
      inner_size: 0.65
      pad_size:   0.3
      outer_line_width: 0.01
      inner_line_width: 0.01
      pad_line_width:   0.01
      outer_background_color: (0.75, 0.75, 0.75, 1)
      outer_line_color:       (0.25, 0.25, 0.25, 1)
      inner_background_color: (0.75, 0.75, 0.75, 1)
      inner_line_color:       (0.7,  0.7,  0.7,  1)
      pad_background_color:   (0.4,  0.4,  0.4,  1)
      pad_line_color:         (0.35, 0.35, 0.35, 1)
    
    Label:
      id: StickValues
      text: root.stick_values

    Joystick:
      id: StickRot
      text: "Control Rotation"
      outer_size: 1
      inner_size: 0.65
      pad_size:   0.3
      outer_line_width: 0.01
      inner_line_width: 0.01
      pad_line_width:   0.01
      outer_background_color: (0.75, 0.75, 0.75, 1)
      outer_line_color:       (0.25, 0.25, 0.25, 1)
      inner_background_color: (0.75, 0.75, 0.75, 1)
      inner_line_color:       (0.7,  0.7,  0.7,  1)
      pad_background_color:   (0.4,  0.4,  0.4,  1)
      pad_line_color:         (0.35, 0.35, 0.35, 1)
